<div class="row clearfix">
	<%= render partial: "admin/profile" %>
	<div class="col-md-9 column">
		<%= render partial: "admin/nav" %>
		<a class="title">Statistieken</a>
		<div class="col-md-6">
			<%= link_to admin_users_path do%><h2>Werkzoekenden</h2>
			<div class="col-md-6">
				<h3>Actief</h3>
				<b><%= @acceptedusers.count %></b>
			</div>
		
			<div class="col-md-6">
				<h3>Wachtrij</h3>
				<b><%= @openusers.count %></b>
			</div><% end %>
		</div>
		<%= link_to admin_replies_path do%>
		<div class="col-md-6">
			<h2>Sollicitaties</h2>
			<div class="col-md-6">
				<h3>Verwerkt</h3>
				
				<b><%= @finishedreplies.count %></b>
			</div>
		
			<div class="col-md-6">
				<h3>Wachtrij</h3>
				<b><%= @openreplies.count %></b>
			</div>
		</div>
		<% end %>
	</div>
</div>